<body>
  
  <%- include('header') %>

  <div class="group-posts-container">
    <h1 class="group-welcome-message">
      Welcome to the <%= groupName.replace(/\-+/g, ' ') %> Group!
    </h1>

    <div class="comments-input <%= member %>">
      <form class="post-form" action="/group/<%= groupName %>" method="POST">
        <textarea type="text" name="post" id="post" rows="3" cols="100" required>Say something...</textarea>
        <button class="upload-button" type="submit">Upload</button>
      </form>
    </div>

    <div class="join-this-group <%= member %>2">
      <p>
        <a href="/membership">Join now</a>
        to post here.
      </p>
      
    </div>
    
    <div class="posts">
      <% if(contents.length === 0) { %>
        <h1 class="no-posts">
          No Posts here!
        </h1>
      <% } else { %>
        <% contents.forEach(content => { %>
          <div class="post-card <%= content.id %>">
            <div>
              <p class="post-name"><%= content.firstname %> <%= content.lastname %></p>
            </div>
            <p class="content"><%= content.content %></p>
            <div class="date">
              <%= content.created_at %>
            </div>
          </div>
        <% }) %>
      <% } %>
    </div>

  </div>
</div>

